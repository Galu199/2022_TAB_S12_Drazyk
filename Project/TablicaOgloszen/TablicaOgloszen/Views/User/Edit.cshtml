@model TablicaOgloszen.Models.User

<h1>Edytuj Profil</h1>

@if (Model != null)
{
    <div>
        <span>
            <a class="btn btn-primary" asp-action="Details" asp-controller="User" asp-route-id="@Model.Id">Powrót</a>
        </span>
    </div>
}

<form class="form-control" method="post" asp-action="Edit">
    <div class="form-group mb-3">
        <div asp-validation-summary="All"></div>
    </div>
    <div class="form-group mb-3">
        <label class="form-label" asp-for="UserName"></label>
        <input class="form-control" asp-for="UserName" />
        <span class="form-text" asp-validation-for="UserName"></span>
    </div>
    <div class="form-group mb-3">
        <label class="form-label" asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
        <span class="form-text" asp-validation-for="Email"></span>
    </div>
    <div class="form-group mb-3">
        <label class="form-label" asp-for="PhoneNumber"></label>
        <input class="form-control" asp-for="PhoneNumber" />
        <span class="form-text" asp-validation-for="PhoneNumber"></span>
    </div>
    <div class="form-group mb-3">
        <input class="btn btn-primary" type="submit" value="Edit" />
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}